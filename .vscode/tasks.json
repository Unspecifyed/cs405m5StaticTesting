{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build All",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/output",
                "-I",
                "/usr/local/include",
                "-L",
                "/usr/local/lib",
                "-lgtest",
                "-lgtest_main",
                "-lpthread",
                "-lssl",
                "-lcrypto"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cppcheck",
            "type": "shell",
            "command": "cppcheck",
            "args": [
                "--enable=all",
                "--inconclusive",
                "--std=c++17",
                "--verbose",
                "--language=c++",
                "${workspaceFolder}/*.cpp"
            ],
            "group": "build",
            "problemMatcher": {
                "owner": "cppcheck",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
